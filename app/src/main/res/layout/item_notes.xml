<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="10dp">
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:id="@+id/viewPriority"
            android:layout_margin="10dp"
            android:background="@drawable/red_dot_shape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/google_sans_bold"
                android:id="@+id/NotesTitle"
                android:maxLines="1"
                android:text="Notes ajpp"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/NotesSubtitle"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/google_sans_bold"

                android:text="adjfhasjhfsahfjhasfhashf
fsjhdjfhasjsdfnasflkjasdfjlaskjflkjaslfjlasjflkjaslfkjlasdfjlk"
                android:textColor="#DFD6D6"
                android:textSize="14sp" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/Notesdate"
                android:fontFamily="@font/google_sans_bold"
                android:text="23 March 2020"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>